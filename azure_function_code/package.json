{
  "name": "kv-eventgrid-handler",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test:replication:seed": "node scripts/seed-kv-secrets.js --out /tmp/kv-seed.json",
    "test:replication:verify": "node scripts/verify-replication.js --input /tmp/kv-seed.json",
    "test:idempotency": "node scripts/idempotency-check.js --wait-ms 60000",
    "test:credentials:loop": "node scripts/loop-kv-updates.js --duration-ms 3600000 --interval-ms 60000",
    "test:version-prop": "node scripts/version-propagation.js --updates 4",
    "test:latency": "node scripts/measure-latency.js --timeout-ms 120000",
    "test:recovery": "node scripts/aws-delete-and-recover.js --wait-ms 60000",
    "test:burst": "node scripts/burst-kv-updates.js --count 50 --interval-ms 200"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.971.0",
    "@aws-sdk/credential-providers": "^3.971.0",
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "@azure/storage-blob": "^12.30.0"
  }
}
